<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

	<variable
	  name="isChecked"
	  type="Boolean" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView
	  android:id="@+id/tag_checked_image"
	  android:layout_width="50dp"
	  android:layout_height="50dp"
	  android:layout_marginEnd="20dp"
	  android:src="@{ isChecked ? @drawable/checked : @drawable/checked }"
	  app:layout_constraintEnd_toStartOf="@id/tag_text"
	  app:layout_constraintHorizontal_chainStyle="packed"
	  app:layout_constraintStart_toStartOf="parent"
	  app:layout_constraintTop_toTopOf="parent" />

	<TextView
	  android:id="@+id/tag_text"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:gravity="center"
	  android:text="Uncategorised"
	  android:textColor="@android:color/black"
	  android:textSize="20sp"
	  app:layout_constraintBottom_toBottomOf="parent"
	  app:layout_constraintEnd_toEndOf="parent"
	  app:layout_constraintStart_toEndOf="@id/tag_checked_image"
	  app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>